@model IEnumerable<COMP2084Winter2022Tuesday.Models.Semester>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cours.CourseCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prof.ProfName)
        </th>
        <th>
            <!--
            @Html.DisplayNameFor(model => model.Student.FirstName)
            -->
            Student Full Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Term)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cours.CourseCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prof.ProfName)
        </td>
        <td>
            <!--
            @Html.DisplayFor(modelItem => item.Student.FirstName)
            -->
            @{
                var FullName = item.Student.FirstName + " " + item.Student.LastName;
            }

            @FullName
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Term)
        </td>
        <td>
            <!--
            @Html.DisplayFor(modelItem => item.Year)
            -->

            @{ 

                var YearNoDecimal = Convert.ToInt32(item.Year);
            }

            @YearNoDecimal

        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SemesterID }) |
            @Html.ActionLink("Details", "Details", new { id=item.SemesterID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SemesterID })
        </td>
    </tr>
}

</table>
